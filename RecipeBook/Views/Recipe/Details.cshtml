@model RecipeBook.Models.RecipeUserView

@{ ViewData["Title"] = "Details"; }

<h1>Details</h1>


<div>
    <h1>Recipe</h1>
    <img src="~/Images/@Model.Image" class="img-thumbnail" /> @Model.Name

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeTimeToComplete)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeTimeToComplete)
        </dd>
        <dt class="col-sm-2">
            Images
        </dt>
        <dd class="col-sm-10">



        </dd>
    </dl>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">

        @for (int i = 0; i < Model.RecipeImages.Count; i++)
        {
            if (i == 0)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
            }
            else
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
            }
        }
    </ol>
    <div class="carousel-inner">
        @for (int i = 0; i < Model.RecipeImages.Count; i++)
        {
            if (i == 0)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/RecipeImages/@Model.RecipeImages[i].Image" alt="Second slide">
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/RecipeImages/@Model.RecipeImages[i].Image" alt="Second slide">
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<h3>Ingredients</h3>
<ul>
    @for (int i = 0; i < Model.Ingredients.Count; i++)
    {
        <li>@Model.Ingredients[i].Name <a asp-action="Edit" asp-controller="Ingredient" asp-route-id="@Model.Ingredients[i].Id">Edit</a> | <a asp-action="Delete" asp-controller="Ingredient" asp-route-id="@Model.Ingredients[i].Id">Delete</a></li>
    }
</ul>

<h3>Steps</h3>
<ul>
    @for (int i = 0; i < Model.Steps.Count; i++)
    {
        <li>@Model.Steps[i].Name <a asp-action="Edit" asp-controller="Step" asp-route-id="@Model.Steps[i].Id">Edit</a> | <a asp-action="Delete" asp-controller="Step" asp-route-id="@Model.Steps[i].Id">Delete</a></li>
    }
</ul>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Create" asp-controller="Step" asp-route-recipeId="@Model.Id">Add Step</a> |
    <a asp-action="Create" asp-controller="Ingredient" asp-route-recipeId="@Model.Id">Add Ingredent</a> |
    <a asp-action="Index">Back to List</a>
</div>
